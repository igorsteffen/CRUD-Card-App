@page
@model CRUDCardApp.Pages.CreateModel
@{
    ViewData["ErrorMessage"] = ViewData["ErrorMessage"] ?? "";
}

<form method="post">
    <div class="d-flex justify-content-center mt-5 mb-5">
        <div class="text-center">
            <h2>Create New Student</h2>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"].ToString()))
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <div class="card mx-auto mt-5 mb-5" style="width: 18rem;">
                <div class="card-header p-1 align-content-center" style="width:18rem; height: 10rem;">
                    <img class="card-img-top w-100 h-100" style="object-fit:fill;" src="" alt="Card Image" />
                    <div class="d-flex align-items-center justify-content-center w-100 mt-2">
                        <input type="text" name="Picture" class="form-control w-75 text-center" placeholder="Picture Url Here" />
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-video2 pe-2"></i><p class="card-text"><input type="text" name="StudentNumber" class="form-control" placeholder="Student Number" /></p>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <i class="bi bi-layout-text-sidebar-reverse pe-2"></i><p class="card-text"><input type="text" name="FullName" class="form-control" placeholder="Full Name" /></p>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <i class="bi bi-envelope pe-2"></i><p class="card-text"><input type="text" name="Email" class="form-control" placeholder="E-Mail" /></p>
                    </div>
                    <div class="d-flex align-items-center mt-2">
                        <i class="bi bi-file-lock pe-2"></i><p class="card-text"><input type="text" name="Password" class="form-control" placeholder="Password" /></p>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-75 mt-3 mb-3"><i class="bi bi-person-plus-fill"></i></button>
                </div>
            </div>
        </div>
    </div>

</form>
