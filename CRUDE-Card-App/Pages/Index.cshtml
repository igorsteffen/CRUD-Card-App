@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center mb-5">
    <div class="d-flex justify-content-center align-items-center">
            <h1 class="display-4">Student Management</h1>
        <a class="btn btn-success bi bi-person-plus-fill btn-lg ms-5" asp-area="" asp-page="/Create"></a>
    </div>
</div>
<div class="d-flex justify-content-center">
    <div class="row w-75">
        @foreach (var student in Model.data.myList)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-header p-1" style="width:18rem; height: 10rem;">
                        <img class="card-img-top" style="width:100%; height:100%; object-fit:fill;" src="@student.Picture" alt="Card image cap" />
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-video2 pe-2"></i><p class="card-text">@student.StudentNumber</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="bi bi-layout-text-sidebar-reverse pe-2"></i><p class="card-text">@student.FullName</p>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="bi bi-envelope pe-2"></i><p class="card-text">@student.Email</p>
                        </div>
                        <a class="btn btn-warning bi bi-pencil-square col-md-12 mt-2" asp-page="/Edit" asp-route-StudentNumber="@student.StudentNumber"></a>
                        <a class="btn btn-danger bi bi-trash3 col-md-12 mt-1" asp-page="/Delete" asp-route-StudentNumber="@student.StudentNumber"></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>